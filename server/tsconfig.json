{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["node"],
    "target": "ES2016"   
  },    
  "ts-node": {
      "esm": true
  },
  "include": ["./*", "./declarations/*.d.ts"],
  "exclude": ["./dist", "./node_modules"]
}
